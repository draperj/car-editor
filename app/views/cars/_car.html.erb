<%= turbo_frame_tag car do %>
    <div class="car">
      <%= link_to car.name,
                  car_path(car),
                  data: { turbo_frame: "_top" } %>
      <div class="car__actions">
        <%= button_to "Delete",
                      car_path(car),
                      method: :delete,
                      form: { data: { turbo_frame: "_top" } },
                      class: "btn btn--light" %>
        <%= link_to "Edit",
                    edit_car_path(car),
                    class: "btn btn--light" %>
      </div>
    </div>
  <% end %>